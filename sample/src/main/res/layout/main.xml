<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/bluePrimary"
      android:text="ELM INTERNATIONAL SCHOOLS"
      android:textColor="@color/finestWhite"
      android:textStyle="bold"
      android:layout_alignParentBottom="true"
      android:textAlignment="center"
      android:gravity="center_horizontal"
      android:layout_margin="@dimen/defaultDividerHeight"
      />

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="75dp"
      android:src="@drawable/ic_launcher"
      android:scaleType="fitCenter"
      />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="welcome, kindly select a section :"
    />
  <Button
    android:id="@+id/ELMSecondary"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignParentBottom="true"
    android:background="@color/bluePrimary"
    android:onClick="onClick"
    android:text="ELM SECONDARY SCHOOL"
    android:textColor="@color/finestWhite"
    android:layout_margin="@dimen/defaultDividerHeight"/>


  <Button
    android:id="@+id/ELMscienceSecondary"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignParentBottom="true"
    android:background="@color/bluePrimary"
    android:onClick="onClick"
    android:text="ELM SCIENCE SECONDARY SCHOOL"
    android:textColor="@color/finestWhite"
    android:layout_margin="@dimen/defaultDividerHeight"/>

  <Button
    android:id="@+id/ELMupper"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignParentBottom="true"
    android:background="@color/bluePrimary"
    android:onClick="onClick"
    android:text="ELM UPPER PRIMARY SCHOOL"
    android:textColor="@color/finestWhite"
    android:layout_margin="@dimen/defaultDividerHeight"/>

  <Button
    android:id="@+id/ELMlower"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignParentBottom="true"
    android:background="@color/bluePrimary"
    android:onClick="onClick"
    android:text="ELM LOWER PRIMARY"
    android:textColor="@color/finestWhite"
    android:layout_margin="@dimen/defaultDividerHeight"/>

  <Button
    android:id="@+id/ELMkg"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_alignParentBottom="true"
    android:background="@color/bluePrimary"
    android:onClick="onClick"
    android:text="ELM KINDERGARTEN SCHOOL"
    android:textColor="@color/finestWhite"
    android:layout_margin="@dimen/defaultDividerHeight"
    />
  <Button
      android:id="@+id/ELMnewH"
      android:layout_width="match_parent"
      android:layout_height="64dp"
      android:layout_alignParentBottom="true"
      android:background="@color/bluePrimary"
      android:onClick="onClick"
      android:text="ELM SCHOOL NEW HARGEISA"
      android:textColor="@color/finestWhite"
      android:layout_margin="@dimen/defaultDividerHeight" />


</LinearLayout>